generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum EUserRole {
  USER
  ADMIN
}

enum EOrderStatus {
  PENDING
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELED
}

model User {
  id Int @id @default(autoincrement())
  username String @unique
  email String @unique
  password String
  role EUserRole @default(USER)
  defaultShippingLocalization Int?
  defaultBillingLocalization Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  localizations Localization[]
  cardItems CardItem[]
  orders Order[]

  @@map("users")
}

model Item {
  id Int @id @default(autoincrement())
  name String
  description String @db.Text
  price Decimal
  tags String
  createdAt DateTime @default(now())
  updateAt DateTime @updatedAt

  cardItems CardItem[]
  orderItems OrderItem[]

  @@map("items")
}

model Localization {
  int Int @id @default(autoincrement())
  street String
  city String
  state String
  zipCode String
  country String
  userId Int
  user User @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("localizations")
}

model CardItem {
  id Int @id @default(autoincrement())
  userId Int
  user User @relation(fields: [userId], references: [id])
  itemId Int
  item Item @relation(fields: [itemId], references: [id])  
  quantity Int @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("card_items")
}

model Order {
  id Int @id @default(autoincrement())
  userId Int
  user User @relation(fields: [userId], references: [id])
  total Decimal
  localization String
  status String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  orderItems OrderItem[]
  orderEvents OrderEvent[]

  @@map("orders")
}

model OrderItem {
  id Int @id @default(autoincrement())
  orderId Int
  order Order @relation(fields: [orderId], references: [id])
  itemId Int
  item Item @relation(fields: [itemId], references: [id])
  quantity Int @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("order_items")
}

model OrderEvent {
  id Int @id @default(autoincrement())
  orderId Int
  order Order @relation(fields: [orderId], references: [id])
  eventType String
  eventStatus EOrderStatus @default(PENDING)
  eventTimestamp DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("order_events")
}
